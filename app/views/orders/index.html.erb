          <th>Ordre</th>
          <th>Resturnats</th>
          <th>Invited</th>
          <th>Joined</th>
          <th>Status</th>
          <th>Action</th>

        </tr>
      </thead>
      <tbody class="tb">
      <% @orders.each do |order| %>
        <tr>
       
        
        <td><%= order.meal %></td>
        <td><%= order.restaurant_name %></td>
        <td>10</td>
        <td>5</td>
        <td><%= order.status %></td>
        <td>
        <%= link_to 'view', order_details_path(order) ,class: "a view"%>

        </td>
        </tr>
       

        <% end %>
      </tbody>
    </table>

  </div>
  </div>
</div>
